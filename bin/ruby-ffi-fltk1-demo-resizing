$VERBOSE = true

require "rubygems"
require "ffi/fltk1"

include FFI
include FFI::FLTK

xs = [ 0, 100, 300, 400 ]
ys = [ 0, 100, 300, 400 ]

Window.new(xs.last, ys.last, "Resizing") do |win|
  resizable = nil
  (ys.size - 1).times do |j|
    (xs.size - 1).times do |i|
      x = xs[i] ; w = xs[i+1] - x
      y = ys[j] ; h = xs[j+1] - y
      box = Box.new(x, y, w, h)
      box.box(Box::Type::DOWN_BOX)
      resizable = box if i == 1 && j == 1
    end
  end
  win.resizable(resizable)
  win.size_range(1, 1, 0, 0)
  win.show
end

FLTK.run
