$VERBOSE = true

require "rubygems"
require "ffi/fltk1"

include FFI
include FFI::FLTK

def run_demo(demo)
  demo_path = File.join(File.dirname(__FILE__), demo)
  fork { exec demo_path }
end

Window.new(300, 500, "FFI-FLTK1 demonstration") do |win|
  click_button = Button.new(0,   0, 300, 100, "Click Me!")
  click_button.callback { FLTK.alert("Hello!") }
  boxes_button = Button.new(0, 100, 300, 100, "Boxes")
  boxes_button.callback { run_demo "ruby-ffi-fltk1-demo-box-types" }
  resizing_button = Button.new(0, 200, 300, 100, "Resizing")
  resizing_button.callback { run_demo "ruby-ffi-fltk1-demo-resizing" }
  layout_button = Button.new(0, 300, 300, 100, "Layout")
  layout_button.callback { run_demo "ruby-ffi-fltk1-demo-layout" }
  close_button = Button.new(0, 400, 300, 100, "Close")
  close_button.callback { win.hide }
  win.show
end

FLTK.run
