$VERBOSE = true

require "rubygems"
require "ffi/fltk1"

include FFI
include FFI::FLTK

count = Box::TYPES.size
height = 25
width = 100

Window.new(width, count * height, "Boxes") do |win|
  Box::TYPES.keys.sort.each_with_index do |key,i|
    box = Box.new(0, i * height, width, height, key)
    box.box(Box::TYPES[key])
  end
  win.show
end

FLTK.run
