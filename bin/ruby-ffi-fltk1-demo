$VERBOSE = true

require "rubygems"
require "ffi/fltk1"

include FFI
include FFI::FLTK

def run_demo(demo)
  demo_path =
    File.join(File.dirname(File.dirname(__FILE__)),
              "demo", demo)
  fork { exec demo_path }
end

Window.new(300, 700, "FFI-FLTK1 demonstration") do |win|
  buttons_button = Button.new(0,   0, 300, 100, "Buttons")
  buttons_button.callback { run_demo "buttons" }
  boxes_button = Button.new(0, 100, 300, 100, "Boxes")
  boxes_button.callback { run_demo "box-types" }
  resizing_button = Button.new(0, 200, 300, 100, "Resizing")
  resizing_button.callback { run_demo "resizing" }
  packs_button = Button.new(0, 300, 300, 100, "Packs")
  packs_button.callback { run_demo "packs" }
  scrolls_button = Button.new(0, 400, 300, 100, "Scrolls")
  scrolls_button.callback { run_demo "scrolls" }
  layout_button = Button.new(0, 500, 300, 100, "Layout")
  layout_button.callback { run_demo "layout" }
  close_button = Button.new(0, 600, 300, 100, "Close")
  close_button.callback { win.hide }
  win.show
end

FLTK.run
